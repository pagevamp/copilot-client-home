generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Setting {
  id                String      @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  bannerImageId     String?     @db.Uuid @unique
  bannerImage       Media?      @relation(fields: [bannerImageId], references: [id], onDelete: SetNull)
  backgroundColor   String?
  content           String?
  createdById       String      @db.Uuid
  createdAt         DateTime    @default(now()) @db.Timestamptz()
  updatedAt         DateTime    @updatedAt @ignore @db.Timestamptz()

  @@index([bannerImageId], name: "bannerImageId")
}

model Media {
  id                String      @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  url               String
  filename          String      
  contentType       String
  size              Int
  createdById       String      @db.Uuid
  createdAt         DateTime    @default(now()) @db.Timestamptz()
  updatedAt         DateTime    @updatedAt @ignore @db.Timestamptz() 
  setting           Setting? 
}
